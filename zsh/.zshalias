alias e=$EDITOR
alias fehfull="feh -F -Y -Z"
alias ffmpeg='ffmpeg -hide_banner'
alias ffprobe='ffprobe -hide_banner'
# color ls output in terminal
alias ls='ls --color=auto'
alias l='ls -1'
alias ll='ls -lh'
alias la='ls -lAh'
alias grep='grep --color'
alias mountforme="sudo mount -o uid=$(whoami),gid=users"
alias nl='nl -ba'
alias path="echo \$PATH | sed 's|:|\\n|g' | sort"
alias addon-sdk="cd /opt/addon-sdk \
				 && source bin/activate \
				 && cd - > /dev/null"
