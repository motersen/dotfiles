[color]
	ui = auto
[core]
	editor = nvim
	abbrev = 12
[push]
	default = simple
[user]
	email = moritz.petersen@freenet.de
	name = Moritz Petersen
[log]
	abbrevCommit = yes
[alias]
	diffstat = diff --stat
	ci = commit -v
	co = checkout
	lc = diff HEAD~1..HEAD
	lcs = diff --stat HEAD~1..HEAD
	st = status --short
